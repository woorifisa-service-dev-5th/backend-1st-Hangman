package hangman;

import service.cloud.Console;

public class InputHandler {
	
	public char[] guessedLetters;
	
	public char inputLetter() {
		
		Console.print("알파벳을 한 개 입력하세요(a~z, 중복은 불가능합니다): ");
        String input = Console.read();

        try {
            int categoryNum = Integer.parseInt(input);

            if (categoryNum >= 1 && categoryNum <= 4) {
                return categoryNum;
            } else {
                Console.print("1부터 4 사이의 숫자를 입력해주세요.");
            }

        } catch (NumberFormatException e) {
            Console.print("숫자만 입력 가능합니다. 다시 시도해주세요.");
        }
		
		
		
	}

}
