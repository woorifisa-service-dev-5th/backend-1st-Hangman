public class Display {
	
	private static final String[] HANGMAN_STAGES = {
            """
              +---+
              |   |
                  |
                  |
                  |
                  |
            =========
            """,
            """
              +---+
              |   |
              O   |
                  |
                  |
                  |
            =========
            """,
            """
              +---+
              |   |
              O   |
              |   |
                  |
                  |
            =========
            """,
            """
              +---+
              |   |
              O   |
             /|   |
                  |
                  |
            =========
            """,
            """
              +---+
              |   |
              O   |
             /|\\  |
                  |
                  |
            =========
            """,
            """
              +---+
              |   |
              O   |
             /|\\  |
             /    |
                  |
            =========
            """,
            """
            +---+
            |   |
           \\O/  |
            |   |
           / \\  |
                |
          =========
          """

        };
	
	public void showGameScreen(int life, char[] currentWord, String category) {
	    int stageIndex = 6 - life; // life 6 â†’ 0ë²ˆì§¸ ê·¸ë¦¼, life 0 â†’ 6ë²ˆì§¸ ê·¸ë¦¼
	    if (stageIndex < 0) stageIndex = 0;
	    if (stageIndex > 6) stageIndex = 6;
	    
	    // 0/ ì„ íƒí•œ ì¹´í…Œê³ ë¦¬ ì¶œë ¥ (êµ¬í˜„ í•„ìš”)
	    System.out.println("<ì¹´í…Œê³ ë¦¬: "+category+">");

	    // 1. í–‰ë§¨ ê·¸ë¦¼ ì¶œë ¥
	    System.out.println(HANGMAN_STAGES[stageIndex]);

	    // 2. ë‚¨ì€ ìƒëª… ìˆ˜ ì¶œë ¥
	    System.out.println("ë‚¨ì€ ìƒëª… â™¥ : " + life);

	    // 3. í˜„ì¬ ë‹¨ì–´ ìƒíƒœ ì¶œë ¥
	    StringBuilder wordDisplay = new StringBuilder();
	    for (char c : currentWord) {
	        wordDisplay.append(c).append(' ');
	    }
	    System.out.println("í˜„ì¬ ë‹¨ì–´ : " + wordDisplay.toString().trim());
	    System.out.println();
	}

	
	public void showMessage(String message) {
	    System.out.println("ğŸ“¢ " + message);
	}
	
	public void showGameOver(String targetWord) {
	    System.out.println(HANGMAN_STAGES[6]); // ì™„ì „í•œ êµìˆ˜í˜•
	    System.out.println("ğŸ“¢ ì‹¤íŒ¨ ~ ë‹¤ìŒ ê¸°íšŒì— ~ !");
	    System.out.println("ğŸ“¢ ì •ë‹µì€ ~ " + targetWord);
	}

}
