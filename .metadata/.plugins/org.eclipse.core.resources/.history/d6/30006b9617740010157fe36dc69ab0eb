package hangman;

import service.cloud.Console;

public class GameController {

	public static void main(String[] args) {
		
		// 1. 카테고리 입력 받기	
		// 2. 입력받은 카테고리를 통해 게임 시작하기
		HangmanGame game = new HangmanGame(inputCategory());
		game.start();
		
		
		

	}
	
	public static String inputCategory() {
	    Console.print("게임 카테고리를 선택하세요: 1. 음식 2. 동물 3. 사물 4. 동사 ");
	    String input = Console.read();

	    try {
	        int categoryNum = Integer.parseInt(input);
	        WordProvider wordprovider = new WordProvider();
	        wordprovider.getRandomWord(categoryNum);
	        
	        return categoryNum;
	    } catch (NumberFormatException e) {
	        Console.print("숫자만 입력 가능합니다. 기본값 1(음식)로 설정합니다.");
	        return 1; // 혹은 예외 처리 또는 다시 입력 받기 로직으로 대체 가능
	    }
	}


}
